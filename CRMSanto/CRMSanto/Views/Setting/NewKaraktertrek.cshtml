@model CRMSanto.Models.Karaktertrek

@{
    ViewBag.Title = "Karaktertrek toevoegen";
    List<CRMSanto.Models.Karaktertrek> list = ViewBag.List;
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Instellingen", "Index", "Setting")</li>
    <li class="active">Karaktertrek toevoegen</li>
</ul>

@using (Html.BeginForm("NewKaraktertrek", "Setting", FormMethod.Post,
 new { @id = "frmSetting", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="col s12">
                    @Html.LabelFor(model => model.Naam)
                    @Html.EditorFor(model => model.Naam)
                    @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <h4>Bestaande :</h4>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Naam</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CRMSanto.Models.Karaktertrek item in list)
                            {
                                <tr>
                                    <td>@Html.Raw(item.ID)</td>
                                    <td>@Html.Raw(item.Naam)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="fixed-action-btn">
        <a onclick="$('#frmSetting').submit();" href="#" class="btn-floating btn-large waves-effect waves-light green"><i class="mdi-content-save"></i></a>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
