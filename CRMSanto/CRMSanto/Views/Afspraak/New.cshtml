@model CRMSanto.Models.PresentationModels.NieuweAfspraakPM

@{
    ViewBag.Title = "Afspraak toevoegen";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Afspraken","Index","Afspraak")</li>
    <li class="active">Toevoegen</li>
</ul>

@using (Html.BeginForm("New", "Afspraak", FormMethod.Post,new { @id = "frmAfspraak" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="input-field col s12">
            @Html.DropDownListFor(model => model.Afspraak.Klant.ID, Model.Klanten)
            <label>@Html.DisplayNameFor(model => model.Afspraak.Klant)</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            @Html.DropDownListFor(model => model.Afspraak.Masseur.ID, Model.Masseurs)
            <label>@Html.DisplayNameFor(model => model.Afspraak.Masseur)</label>
        </div>
    </div>

    <div class="row row-eq-height">
        <div class="col s6">
            <p>
                <input type="checkbox" checked id="massage" />
                <label for="massage">@Html.DisplayNameFor(model => model.Afspraak.SoortAfspraak)</label>
            </p>
            <div class="row" id="massage-row">
                <div class="input-field col s12">
                    @Html.DropDownListFor(model => model.Afspraak.SoortAfspraak.ID, Model.SoortAfspraken, "--", null)
                </div>
            </div>
        </div>
        <div class="col s6">
            <p>
                <input type="checkbox" id="arrangement" />
                <label for="arrangement">@Html.DisplayNameFor(model => model.Afspraak.Arrangement)</label>
            </p>
            <div class="row" id="arrangement-row">
                <div class="input-field col s6">
                    @Html.DropDownListFor(model => model.Afspraak.Arrangement.ID, Model.Arrangementen, "--", null)
                </div>
                <div class="input-field col s6">
                    @Html.DropDownListFor(model => model.Afspraak.Extra.ID, Model.Extras, "--", null)
                    <label>@Html.DisplayNameFor(model => model.Extras)</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "datepicker", id = "datum", type = "date" } })
            <label for="datum">@Html.DisplayNameFor(model => model.Datum)</label>
        </div>
        <div class="input-field col s6">
            <p><label>@Html.DisplayNameFor(model => model.Tijdstip)</label></p>
            @Html.EditorFor(model => model.Tijdstip, new { placeholder = "" })
        </div>
    </div>

    <div class="row">
        <div class="col s6">
                <input type="checkbox" id="Afspraak_SoloDuo" name="Afspraak.SoloDuo" />
                <label for="Afspraak_SoloDuo">@Html.DisplayNameFor(model => model.Afspraak.SoloDuo)</label>
        </div>
        <div class="col s6">
            <input type="checkbox" id="Afspraak_Verplaatsing" name="Afspraak.Verplaatsing" />
            <label for="Afspraak_Verplaatsing">@Html.DisplayNameFor(model => model.Afspraak.Verplaatsing)</label>
        </div>
    </div>
    
    <div class="row">
        <div class="input-field col s12">
            @Html.TextAreaFor(model => model.Afspraak.Notitie, new { @class = "materialize-textarea", placeholder = "" })
            <label>@Html.DisplayNameFor(model => model.Afspraak.Notitie)</label>
        </div>
    </div>
        }



        <script>
            $(document).ready(function () {
                $('select').material_select();
                $('#arrangement-row').children().hide();
            });
            $("#massage").change(function () {
                if (this.checked) {
                    $('#massage-row').children().slideDown();
                }
                else {
                    $('#massage-row').children().slideUp();
                }
            });
            $("#arrangement").change(function () {
                if (this.checked) {
                    $('#arrangement-row').children().slideDown();
                }
                else {
                    $('#arrangement-row').children().slideUp();
                }
            });
        </script>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
