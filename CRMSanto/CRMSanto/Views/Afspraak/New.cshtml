@model CRMSanto.Models.PresentationModels.NieuweAfspraakPM

@{
    ViewBag.Title = "Afspraak toevoegen";
}

<ul class="breadcrumb">
    <li><a href="afspraken.html">Afspraken</a></li>
    <li class="active">Toevoegen</li>
</ul>

@using (Html.BeginForm("New", "Afspraak", FormMethod.Post,new { @id = "frmAfspraak" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Afspraak</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
                @Html.LabelFor(model => model.Klanten, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Klant.ID, Model.Klanten, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
            @Html.LabelFor(model => model.DatumTijdstip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DatumTijdstip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DatumTijdstip, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Tijdstip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tijdstip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tijdstip, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>

        <div class="form-group col-md-3">
            <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.SoloDuo) Duo?
                    @Html.ValidationMessageFor(model => model.SoloDuo, "", new { @class = "text-danger" })
                </label>
            </div>
        </div>

        <div class="form-group col-md-3">
                <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.Verplaatsing) Op verplaatsing?
                    @Html.ValidationMessageFor(model => model.Verplaatsing, "", new { @class = "text-danger" })
                </label>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            <div class="inputs">
            @Html.LabelFor(model => model.Notitie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Notitie, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Notitie, "", new { @class = "text-danger" })
            </div>
        </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Duur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="slider shor slider-material-orange"></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a onclick="$('#frmAfspraak')[0].submit();" href="#" class="btn btn-success btn-fab btn-raised mdi-content-save"></a>
                <a onclick="$('#frmAfspraak')[0].reset();" href="#" class="btn btn-warning btn-fab btn-raised mdi-navigation-refresh fab2"></a>
                @Html.ActionLink(" ", "Index", "Afspraak", null, new Dictionary<string, object> { { "class", "btn btn-danger btn-fab btn-raised mdi-navigation-close fab3" } })
            </div>
        </div>
    </div>
}



<script>
    $(document).ready(function () {

    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
