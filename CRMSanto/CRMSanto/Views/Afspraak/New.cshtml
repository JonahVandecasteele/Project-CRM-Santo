@model CRMSanto.Models.PresentationModels.NieuweAfspraakPM

@{
    ViewBag.Title = "Afspraak toevoegen";
}

<ul class="breadcrumb">
    <li><a href="afspraken.html">Afspraken</a></li>
    <li class="active">Toevoegen/wijzigen</li>
</ul>

@using (Html.BeginForm("New", "Afspraak", FormMethod.Post,
 new { @id = "frmAfspraak" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Afspraak</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
                @Html.LabelFor(model => model.Klanten, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Afspraak.Klant.Naam, Model.Klanten, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
            @Html.LabelFor(model => model.Afspraak.DatumTijdstip, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Afspraak.DatumTijdstip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Afspraak.DatumTijdstip, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>

        <div class="form-group col-md-3">
            <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.Afspraak.SoloDuo) Duo?
                    @Html.ValidationMessageFor(model => model.Afspraak.SoloDuo, "", new { @class = "text-danger" })
                </label>
            </div>
        </div>

        <div class="form-group col-md-3">
                <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.Afspraak.Verplaatsing) Op verplaatsing?
                    @Html.ValidationMessageFor(model => model.Afspraak.Verplaatsing, "", new { @class = "text-danger" })
                </label>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            <div class="inputs">
            @Html.LabelFor(model => model.Afspraak.Notitie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Afspraak.Notitie, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Afspraak.Notitie, "", new { @class = "text-danger" })
            </div>
        </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Afspraak.Duur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Afspraak.Duur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Afspraak.Duur, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-3">
            <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.Afspraak.Geannuleerd) Duo?
                    @Html.ValidationMessageFor(model => model.Afspraak.Geannuleerd, "", new { @class = "text-danger" })
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a onclick="$('#frmAfspraak').submit();" href="#" class="btn btn-success btn-fab btn-raised mdi-content-save"></a>
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $.material.init();
</script>
