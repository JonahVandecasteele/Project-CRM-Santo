@model CRMSanto.Models.Product

@{
    ViewBag.Title = "Product toevoegen";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Producten", "Index", "Product")</li>
    <li class="active">Toevoegen</li>
</ul>


@using (Html.BeginForm("New", "Product", FormMethod.Post,
 new { @id = "frmProduct", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    @Html.LabelFor(model => model.Naam)
                    @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { placeholder = "" } })
                    @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.AankoopPrijs)
                    @Html.EditorFor(model => model.AankoopPrijs, new { htmlAttributes = new { placeholder = "" } })
                    @Html.ValidationMessageFor(model => model.AankoopPrijs, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.VerkoopPrijs)
                    @Html.EditorFor(model => model.VerkoopPrijs, new { htmlAttributes = new { placeholder = "" } })
                    @Html.ValidationMessageFor(model => model.VerkoopPrijs, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.Inhoud)
                    @Html.EditorFor(model => model.Inhoud, new { htmlAttributes = new { placeholder = "" } })
                    @Html.ValidationMessageFor(model => model.Inhoud, "", new { @class = "text-danger" })
                </div>
                <div class="input-field col s6">
                    @Html.LabelFor(model => model.Barcode)
                    @Html.EditorFor(model => model.Barcode, new { htmlAttributes = new { placeholder = "" } })
                    @Html.ValidationMessageFor(model => model.Barcode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.LabelFor(model => model.Omschrijving)
                    @Html.TextAreaFor(model => model.Omschrijving, new { @class = "materialize-textarea", placeholder="" })
                    @Html.ValidationMessageFor(model => model.Omschrijving, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
        

    <div class="fixed-action-btn">
        <a onclick="$('#frmProduct').reset();" href="#" class="btn-floating btn-large waves-effect waves-light red"><i class="mdi-navigation-refresh"></i></a>
        <a onclick="$('#frmProduct').submit();" href="#" class="btn-floating btn-large waves-effect waves-light green"><i class="mdi-content-save"></i></a>
    </div>
}

<div class="progress">
    <div class="indeterminate"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        $(".progress").hide();
    });
    function showProgress() {
        $(".progress").show();
    }
</script>
