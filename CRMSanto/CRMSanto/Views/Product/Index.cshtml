@model IEnumerable<CRMSanto.Models.Product>

@{
    ViewBag.Title = "Index";
}

<ul class="breadcrumb">
    <li class="active">Producten</a></li>
</ul>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Zoeken...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </div>
        <span class="help-block"></span>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Productnaam</th>
                        <th>Inhoud</th>
                        <th>Aantal verkocht</th>
                        <th>Aankoopprijs</th>
                        <th>Verkoopprijs</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Naam)</td>
                        <td>@Html.DisplayFor(modelItem => item.Inhoud)</td>
                        <td>3</td>
                        <td>€ @Html.DisplayFor(modelItem => item.AankoopPrijs)</td>
                        <td>€ @Html.DisplayFor(modelItem => item.VerkoopPrijs)</td>
                        <td><i class="mdi-editor-mode-edit"></i> <i class="mdi-content-remove-circle"></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<a href="product-verkopen.html" class="btn btn-success btn-fab btn-raised mdi-action-shopping-cart"></a>
<a href="product-toevoegen.html" class="btn btn-warning btn-fab btn-raised mdi-content-add fab2"></a>