@model IEnumerable<CRMSanto.Models.Product>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    


<ul class="breadcrumb">
    <li class="active">Producten</li>
</ul>

<div class="row">
    <div class="col-lg-12">
       
        
        <div class="form-group">
            <div class="input-group">
                <input type="text" name="Search" class="form-control" placeholder="Zoeken...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" name="submit" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                    @*<input class="btn btn-primary" name="submit" type="submit"><span class="glyphicon glyphicon-search"></span> />*@
                </span>
            </div>
        </div>
            @*<b>Search by:</b>
            @Html.TextBox("Search");<input type="submit" value="Search" />*@
       
        <span class="help-block"></span>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Productnaam</th>
                        <th>Inhoud</th>
                        <th>Aantal verkocht</th>
                        <th>Aankoopprijs</th>
                        <th>Verkoopprijs</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Naam)</td>
                        <td>@Html.DisplayFor(modelItem => item.Inhoud)</td>
                        <td>3</td>
                        <td>€ @Html.DisplayFor(modelItem => item.AankoopPrijs)</td>
                        <td>€ @Html.DisplayFor(modelItem => item.VerkoopPrijs)</td>
                        <td><i class="mdi-editor-mode-edit"></i> <i class="mdi-content-remove-circle"></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
