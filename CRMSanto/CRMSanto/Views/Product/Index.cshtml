@model IEnumerable<CRMSanto.Models.Product>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    


<ul class="breadcrumb">
    <li class="active">Producten</li>
</ul>       
        
            <div class="input-group search">
                <input type="text" name="Search" class="form-control" placeholder="Zoeken...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" name="submit" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                    @*<input class="btn btn-primary" name="submit" type="submit"><span class="glyphicon glyphicon-search"></span> />*@
                </span>
            </div>
            @*<b>Search by:</b>
            @Html.TextBox("Search");<input type="submit" value="Search" />*@
       
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Productnaam</th>
                        <th>Inhoud</th>
                        <th>Verkocht</th>
                        <th>Aankoopprijs</th>
                        <th>Verkoopprijs</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr class="product">
                        <td>@Html.DisplayFor(modelItem => item.Naam)</td>
                        <td>@Html.DisplayFor(modelItem => item.Inhoud)</td>
                        <td>3</td>
                        <td>€ @Html.DisplayFor(modelItem => item.AankoopPrijs)</td>
                        <td>€ @Html.DisplayFor(modelItem => item.VerkoopPrijs)</td>
                        <td>
                            <nobr>
                                <a class="btn-floating waves-effect waves-light orange inline-btn"><i class="mdi-editor-mode-edit"></i></a>
                                <a class="btn-floating waves-effect waves-light red inline-btn"><i class="mdi-content-remove-circle"></i></a>
                            </nobr>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
}
Aantal resultaten: @Model.Count()
<div class="fixed-action-btn">
    <a href='@Url.Action("NewProductRegistration", "Product")' class="btn-floating btn-large waves-effect waves-light red"><i class="mdi-action-shopping-cart"></i></a>
    <a href='@Url.Action("New", "Product")' class="btn-floating btn-large waves-effect waves-light green"><i class="mdi-content-add"></i></a>
</div>
