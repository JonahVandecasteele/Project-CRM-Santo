@model IEnumerable<CRMSanto.Models.Afspraak>

@{
    ViewBag.Title = "Start";
}

<h2>Afspraken vandaag (@Model.Count())</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatumTijdstip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Verplaatsing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notitie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoloDuo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DatumTijdstip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Verplaatsing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notitie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoloDuo)
        </td>
    </tr>
}

</table>
