@model CRMSanto.Models.Karaktertrek
@{
    List<CRMSanto.Models.Karaktertrek> list = (List<CRMSanto.Models.Karaktertrek>)ViewData["Karaktertreken"];
    List<CRMSanto.Models.Karaktertrek> currentlist = (List<CRMSanto.Models.Karaktertrek>)ViewData["Karaktertrek"];
    if (currentlist == null)
    {
        currentlist = new List<CRMSanto.Models.Karaktertrek>();
    }
        
}

<div class="input-field col s12">
    @Html.DropDownListFor(model => model.ID, new SelectList(list, "ID", "Naam"))
    @*<select>
        <option value="" disabled selected>--</option>
        @foreach (var item in list)
        {
            <option value="@item.ID">@item.Naam</option>
        }
    </select>*@
    <label>Karaktertrekken</label>
    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
    <button class="btn waves-effect waves-light" type="submit" name="addkar">
        Toevoegen
        <i class="mdi-content-add right"></i>
    </button>
</div>
<p>
    @foreach (var addemItem in currentlist)
{
    @addemItem.Naam
}
    </p>
