@model IEnumerable<CRMSanto.Models.Rekening>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DatumTijdstip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Klant.Naam) @Html.DisplayFor(modelItem => item.Klant.Voornaam)
        </td>
        @foreach (var x in item.Producten) { 
        <td>
            PRODUCT: @x.VerkochtProduct.Naam <br />
            AANTAL: @x.Aantal
        </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
