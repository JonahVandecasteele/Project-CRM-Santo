@{
    ViewBag.Title = "Diensten";
}

<div class="row">
    <div class="col s12">
        <div class="row">
            <h2>Massages</h2>
        </div>
        <div class="row">
            <a class="waves-effect waves-light btn" href="@Url.Action("New", "Dienst")"><i class="mdi-content-add"></i>Massage toevoegen</a>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>
                            Naam
                        </th>
                        <th>
                            Prijs
                        </th>
                        <th>
                            Duur
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in ViewBag.Massages)
                    {
                        <tr>
                            <td>
                                @item.Naam
                            </td>
                            <td>
                                €@item.Prijs
                            </td>
                            <td>
                                @item.Duur minuten
                            </td>
                            <td class="text-right">
                                <nobr>
                                    <a href='@Url.Action("Edit","Dienst",new { id = item.ID })' class="btn-floating waves-effect waves-light orange inline-btn"><i class="mdi-editor-mode-edit"></i></a>
                                </nobr>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>    
